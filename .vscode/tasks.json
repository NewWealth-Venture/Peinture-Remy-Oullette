{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ouvrir le navigateur (Simple Browser)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "echo ${input:openSimpleBrowser}",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "echo": false,
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "openSimpleBrowser",
      "type": "command",
      "command": "simpleBrowser.show",
      "args": ["http://localhost:3000"]
    }
  ]
}
